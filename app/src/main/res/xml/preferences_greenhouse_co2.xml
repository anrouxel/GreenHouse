<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/preference_greenhouse_co2"
        app:iconSpaceReserved="false">

        <SeekBarPreference
            app:key="co2_min"
            app:title="@string/preference_greenhouse_co2_min"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true"/>

        <SeekBarPreference
            app:key="co2_max"
            app:title="@string/preference_greenhouse_co2_max"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>