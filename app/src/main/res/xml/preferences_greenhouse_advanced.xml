<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="brightness"
        app:title="@string/preference_greenhouse_brightness"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        app:key="temperature"
        app:title="@string/preference_greenhouse_temperature"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true"/>

    <SeekBarPreference
        app:key="humidity_air"
        app:title="@string/preference_greenhouse_humidity_air"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true"/>

    <SeekBarPreference
        app:key="earth_moisture"
        app:title="@string/preference_greenhouse_earth_moisture"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true"/>

    <SeekBarPreference
        app:key="o2"
        app:title="@string/preference_greenhouse_o2"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true"/>

    <SeekBarPreference
        app:key="co2"
        app:title="@string/preference_greenhouse_co2"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true"/>

</PreferenceScreen>